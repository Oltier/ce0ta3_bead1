{{#extend "scripts"}}
<script src="/js/list.js"></script>
<script src="/js/list_delete.js"></script>
{{/extend}}

{{#each messages}}
<div class="alert alert-dismissible alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    {{this}}
</div>
{{/each}}

<div class="page-header">
    <h1>TODO-s</h1>
</div>

<table class="table table-striped table-hover" id="todoTable">
    <thead>
        <tr>
            <th>Időpont</th>
            <th>Státusz</th>
            <th>Leírás</th>
            <th>Határidő</th>
            <th>Parancsnok</th>
        </tr>   
    </thead>
    <tbody>
        {{#each todos}}
        <tr>
            <!--Ezek a models/todo-ból jönnek -->
            <td>{{date}}</td>
            <td><span class="label label-{{statusClass}}">{{statusText}}</span></td>
            <td>{{description}}</td>
            <td>{{dueDate}}</td>
            <td>{{assignerNickname}}</td>
            <td>
                <a class="btn btn-default btn-sm" href="/todos/edit/{{id}}" role="button">Szerkeszt</a>
                <a class="btn btn-danger btn-sm" href="todos/delete/{{id}}" role="button">Törlés</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<p><a href="/todos/new" class="btn btn-default">Új feladat felvitele</a></p>
